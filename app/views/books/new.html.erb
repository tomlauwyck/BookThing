<h1>Add a book</h1>
<%= form_for(@book) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </div>
<div class="field">
  <%= f.label :author %><br />
  <%= f.text_field :author %><br />
</div>
<div class="actions">
  <%= f.submit "Add Book" %>
</div>
<% end %>
